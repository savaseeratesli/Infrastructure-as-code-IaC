[Unit]
Description=Concourse Compose Service
After=docker.service iptablesfix.service
Requires=docker.service iptablesfix.service

[Service]
Type=oneshot
User=root
Group=root
WorkingDirectory=/opt/ComposeFiles/
ExecStart=/usr/libexec/docker/cli-plugins/docker-compose -f /opt/ComposeFiles/concourse-compose.yml up -d
ExecStop=/usr/libexec/docker/cli-plugins/docker-compose -f /opt/ComposeFiles/concourse-compose.yml down
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
