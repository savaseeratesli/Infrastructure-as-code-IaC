[Unit]
Description=nginx
After=docker.service
Requires=docker.service

[Service]
Type=oneshot
User=root
Group=root
WorkingDirectory=/opt/ComposeFiles/nginx/
ExecStart=/usr/libexec/docker/cli-plugins/docker-compose -f /opt/ComposeFiles/nginx/nginx-compose.yml up -d
ExecStop=/usr/libexec/docker/cli-plugins/docker-compose -f /opt/ComposeFiles/nginx/nginx-compose.yml down
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
